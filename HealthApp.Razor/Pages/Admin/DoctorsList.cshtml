@page "/Admin/DoctorsList"
@model HealthApp.Razor.Pages.Admin.DoctorsListModel
@{
    <h2 class="text-primary fw-bold mb-4">Doctors List</h2>

    <table class="table table-striped table-hover mt-4">
        <thead class="table-dark text-center">
            <tr>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var doctor in Model.Doctors)
            {
                <tr>
                    <td>@doctor.Name</td>
                    <td class="text-center">
                        <form method="post" asp-page-handler="DeleteDoctor" asp-route-id="@doctor.Id">
                            <button class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
