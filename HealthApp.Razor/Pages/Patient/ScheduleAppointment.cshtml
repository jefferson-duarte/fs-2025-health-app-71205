@page
@model HealthApp.Razor.Pages.Patient.ScheduleAppointmentModel
@{
    <h2 class="text-primary fw-bold">Schedule Appointment</h2>

    <form method="post" class="p-4 bg-light shadow rounded">
        <div class="mb-3">
            <label for="doctor" class="form-label">Doctor:</label>
            <select asp-for="Appointment.DoctorId" asp-items="Model.Doctors" class="form-select">
                <option value="">-- Select --</option>
            </select>
            <span asp-validation-for="Appointment.DoctorId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="appointmentDate" class="form-label">Appointment Date:</label>
            <input asp-for="Appointment.AppointmentDate" type="datetime-local" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary w-100">Schedule Appointment</button>

        <div asp-validation-summary="All" class="text-danger mt-3"></div>
    </form>
}
