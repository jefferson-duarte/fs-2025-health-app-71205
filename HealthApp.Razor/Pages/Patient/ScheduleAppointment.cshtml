@page
@model HealthApp.Razor.Pages.Patient.ScheduleAppointmentModel
@{
    <h2>Schedule Appointment</h2>

    <form method="post">
        <div>
            <label for="doctor">Doctor:</label>
            <select asp-for="Appointment.DoctorId" asp-items="Model.Doctors">
                <option value="">-- Select --</option>
            </select>
            <span asp-validation-for="Appointment.DoctorId" class="text-danger"></span>
        </div>

        <div>
            <label for="appointmentDate">Appointment Date:</label>
            <input asp-for="Appointment.AppointmentDate" type="datetime-local" />
        </div>

        <button type="submit">Schedule Appointment</button>

        <div asp-validation-summary="All" class="text-danger"></div>
    </form>
}