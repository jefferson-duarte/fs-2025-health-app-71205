@page "/MyAppointments"
@model HealthApp.Razor.Pages.Patient.MyAppointmentsModel
@{
    <h2>My Appointments</h2>

    @if (Model.Appointments.Count == 0)
    {
        <p>You don't have any appointments at the moment.</p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Doctor</th>
                    <th>Date</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var appointment in Model.Appointments)
                {
                    <tr>
                        <td>@appointment.Doctor.Name</td>
                        <td>@appointment.AppointmentDate.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@(appointment.IsCanceled ? "Canceled" : "Active")</td>
                        <td>
                            @if (!appointment.IsCanceled)
                            {
                                <form method="post" asp-page-handler="Cancel" asp-route-id="@appointment.Id">
                                    <button class="btn btn-danger">Cancel</button>
                                </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <nav>
            <ul class="pagination">
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                        <a class="page-link" asp-route-pageNumber="@i">@i</a>
                    </li>
                }
            </ul>
        </nav>
    }
}
